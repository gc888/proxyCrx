{
    "manifest_version": 2,
    "name": "proxyCrx",
    "description": "a proxy extension",
    "version": "1.0.0",
    "options_page": "options.html",
    "background": { "scripts": ["background.js"] },
    "icons" : {
      "16" : "./icon/icon16.png",
      "48" : "./icon/icon48.png",
      "128" : "./icon/icon128.png"
    },
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "<all_urls>",
      "notifications",
      "tabs",
      "storage"
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  }